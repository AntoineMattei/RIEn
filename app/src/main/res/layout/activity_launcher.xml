<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutLauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LauncherActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/LauncherActivityImageView"
            android:layout_width="238dp"
            android:layout_height="238dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/logo_de_l_application"
            android:src="@drawable/ic_rien" />

        <ProgressBar
            android:id="@+id/LauncherActivityProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundTint="@color/cobalt_blue" />

    </LinearLayout>

</TableLayout>